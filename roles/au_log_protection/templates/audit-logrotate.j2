# ==============================================
# CUI audit log retention policy
# Purpose: Retain audit logs for federal audit windows.
# ==============================================
/var/log/audit/audit.log {
    daily
    rotate {{ (audit_log_retention_years | int) * 365 }}
    missingok
    notifempty
    compress
    delaycompress
    sharedscripts
    postrotate
        /usr/bin/systemctl kill -s HUP auditd.service >/dev/null 2>&1 || true
    endscript
}
